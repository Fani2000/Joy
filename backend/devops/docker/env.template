# Joy Backend - Docker Environment Variables
# Copy this file to .env and update with your values

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=joy

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# Connection Strings (used by API container)
ConnectionStrings__mongodb=mongodb://admin:admin123@mongodb:27017/joy?authSource=admin
ConnectionStrings__rabbitmq=amqp://guest:guest@rabbitmq:5672

# Database Seeding
DatabaseSeeding__Enabled=true
DatabaseSeeding__OnlyInDevelopment=true

# Azure OpenAI (Optional - add your keys)
AzureOpenAI__Endpoint=
AzureOpenAI__ApiKey=
AzureOpenAI__DeploymentName=gpt-35-turbo

# Email Configuration (Optional)
EmailSettings__SmtpServer=smtp.gmail.com
EmailSettings__SmtpPort=587
EmailSettings__SenderEmail=
EmailSettings__SenderPassword=

# Twilio Configuration (Optional)
Twilio__AccountSid=
Twilio__AuthToken=
Twilio__PhoneNumber=
Twilio__WhatsAppNumber=

